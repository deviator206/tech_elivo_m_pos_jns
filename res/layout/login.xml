<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_Gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dip"
        android:layout_marginRight="45dip"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/coreIv"
            android:layout_width="614dp"
            android:layout_height="182dp"
            android:layout_gravity="right"
            android:layout_marginBottom="-45dip"
            android:src="@drawable/core_mpos_login_welcome" >
        </ImageView>

        <LinearLayout
            android:id="@+id/userLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_weight="0.75"
                android:gravity="right"
                android:text="@string/servername"
                android:textColor="@color/Black"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/serverNameET"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.83"
                android:background="@drawable/edit_textfield_large_selector"
                android:ems="10"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <requestFocus />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_weight="0.75"
                android:gravity="right"
                android:text="@string/username"
                android:textColor="@color/Black"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/userNameET"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.83"
                android:background="@drawable/edit_textfield_large_selector"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <requestFocus />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_weight="0.75"
                android:gravity="right"
                android:text="@string/password"
                android:textColor="@color/Black"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:layout_weight="0.83"
                android:background="@drawable/edit_textfield_large_selector"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />

            <requestFocus />
        </LinearLayout>

        <Button
            android:id="@+id/enterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dip"
            android:background="@drawable/login_selector" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cmpnyIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="10dip"
        android:contentDescription="@string/description"
        android:src="@drawable/compulynx_logo" >
    </ImageView>

    <LinearLayout
        android:id="@+id/dummy_id"
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" />

</RelativeLayout>