<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/Light_Gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/useraccesslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:visibility="visible">

        <TextView
            android:id="@+id/messagetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:text="title"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="@string/user_access_message"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/userLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/username"
                android:textColor="@color/Black"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/userNameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@drawable/edit_textfield_large_selector"
                android:imeOptions="actionNext" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="  Password:"
                android:textColor="@color/Black"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:background="@drawable/edit_textfield_large_selector"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />
        </LinearLayout>

  <!--       <Button
            android:id="@+id/enterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dip"
            android:text="Enter"
            android:textSize="18sp" />
 -->

        <RelativeLayout
            android:id="@+id/bottomll"
            android:layout_width="484dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="15dip" >

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/enterButton"
            android:layout_weight="0.5"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
			android:background="@drawable/cancel164x73_selector"/>

        <Button
            android:id="@+id/enterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.5"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
	 		android:background="@drawable/login_selector"/>
    </RelativeLayout>
    </LinearLayout>

